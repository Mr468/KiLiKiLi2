<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_height_space">

            <ImageView
                android:id="@+id/iv_cardview_media"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_height_live_card"
                android:scaleType="centerCrop"
                android:src="@drawable/bili_default_image_tv" />

            <TextView
                android:id="@+id/tv_cardview_title"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_padding_horizontal"
                android:layout_marginLeft="@dimen/dp_padding_horizontal"
                android:layout_marginRight="@dimen/dp_padding_horizontal"
                android:layout_marginStart="@dimen/dp_padding_horizontal"
                android:layout_marginTop="@dimen/dp_height_space"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="@dimen/sp_13" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_padding_horizontal"
                android:layout_marginLeft="@dimen/dp_padding_horizontal"
                android:layout_marginRight="@dimen/dp_padding_horizontal"
                android:layout_marginStart="@dimen/dp_padding_horizontal"
                android:layout_marginTop="@dimen/dp_height_space">

                <TextView
                    android:id="@+id/tv_cardview_username"
                    style="@style/AppText.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/tv_cardview_online"
                    android:layout_toStartOf="@+id/tv_cardview_online"
                    android:ellipsize="end"
                    android:lines="1" />

                <TextView
                    android:id="@+id/tv_cardview_online"
                    style="@style/AppText.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>