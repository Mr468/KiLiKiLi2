<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_height_sub_headline">

        <ImageView
            android:id="@+id/iv_partition_icon"
            android:layout_width="@dimen/dp_size_icon"
            android:layout_height="@dimen/dp_size_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_padding_horizontal"
            android:layout_marginStart="@dimen/dp_padding_horizontal" />

        <TextView
            android:id="@+id/tv_partition_name"
            style="@style/AppText.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_padding_horizontal"
            android:layout_marginStart="@dimen/dp_padding_horizontal"
            android:layout_toEndOf="@+id/iv_partition_icon"
            android:layout_toRightOf="@+id/iv_partition_icon" />

        <TextView
            android:id="@+id/tv_partition_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_padding_horizontal"
            android:layout_marginRight="@dimen/dp_padding_horizontal"
            android:drawableEnd="@drawable/ic_light_gray_arrow_right"
            android:drawablePadding="@dimen/dp_height_space"
            android:drawableRight="@drawable/ic_light_gray_arrow_right" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_margin_cardview" />
</LinearLayout>