<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_margin_cardview"
        android:layout_marginRight="@dimen/dp_margin_cardview"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cardview_media"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_height_live_card"
                android:src="@drawable/bili_default_image_tv" />
        </LinearLayout>

        <TextView
            style="@style/AppText.Caption.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_margin_cardview"
            android:layout_marginRight="@dimen/dp_margin_cardview"
            android:background="@color/black_alpha_60"
            android:text="@string/home_recommend_web" />
    </android.support.v7.widget.CardView>

</LinearLayout>